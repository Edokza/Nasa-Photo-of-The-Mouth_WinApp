<Window x:Class="NasaPhoto_WinApp.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NasaPhoto_WinApp.Wpf.Converters"
        mc:Ignorable="d"
        Title="NASA APOD Viewer"
        Height="600" Width="900">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:MediaTypeToVisibilityConverter x:Key="MediaTypeToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Panel -->
        <Grid Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                <TextBlock Text="NASA APOD"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0,0,20,0"/>

                <ComboBox Width="120"
                  ItemsSource="{Binding Years}"
                  SelectedItem="{Binding SelectedYear}"
                  Margin="0,0,10,0"/>

                <ComboBox Width="150"
                  ItemsSource="{Binding Months}"
                  SelectedIndex="{Binding SelectedMonthIndex}"
                  Margin="0,0,10,0"/>

                <Button Content="Load"
                Padding="15,5"
                Background="#0078D7"
                Foreground="White"
                BorderThickness="0"
                Command="{Binding LoadCommand}"/>
            </StackPanel>

        </Grid>

        <Grid Grid.Row="1">

            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding Apods}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="250"
                                    Margin="10"
                                    CornerRadius="10"
                                    Background="White"
                                    BorderBrush="#DDD"
                                    BorderThickness="1"
                                    Cursor="Hand"
                                    Tag="{Binding}"
                                    MouseLeftButtonUp="Card_Click">

                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10"
                                              ShadowDepth="3"
                                              Opacity="0.2"/>
                                </Border.Effect>

                                <StackPanel>

                                    <Image Height="160"
                                           Stretch="UniformToFill"
                                           Visibility="{Binding MediaType,
                                           Converter={StaticResource MediaTypeToVisibilityConverter}}">
                                           <Image.Source>
                                           <BitmapImage UriSource="{Binding Url}"
                                                        DecodePixelWidth="300"
                                                        CacheOption="OnLoad"/>
                                        </Image.Source>
                                    </Image>

                                    <StackPanel Margin="10">

                                        <TextBlock Text="{Binding Title}"
                                           FontWeight="Bold"
                                           TextWrapping="Wrap"
                                           MaxHeight="40"/>

                                        <TextBlock Text="{Binding MediaType}"
                                           Foreground="#0078D7"
                                           FontSize="12"
                                           Margin="0,5,0,0"/>

                                        <TextBlock Text="{Binding Date, StringFormat='{}{0:dd MMM yyyy}'}"
                                           FontSize="11"
                                           Foreground="Gray"/>

                                    </StackPanel>

                                </StackPanel>

                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Loading Overlay -->
            <Grid Background="#AAFFFFFF"
          Visibility="{Binding IsLoading,
                       Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar IsIndeterminate="True"
                     Width="200"
                     Height="20"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"/>
            </Grid>

        </Grid>

        <StackPanel Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,10,0,0">

            <Button Content="Previous"
            Command="{Binding PrevPageCommand}"
            Margin="5"/>

            <TextBlock Text="{Binding CurrentPage}"
               FontWeight="Bold"
               Margin="10,0"/>

            <TextBlock Text="/"
               Margin="2,0"/>

            <TextBlock Text="{Binding TotalPages}"
               FontWeight="Bold"
               Margin="2,0"/>

            <Button Content="Next"
            Command="{Binding NextPageCommand}"
            Margin="5"/>
        </StackPanel>

    </Grid>
</Window>