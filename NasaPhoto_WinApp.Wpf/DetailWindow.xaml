<Window x:Class="NasaPhoto_WinApp.Wpf.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="APOD Detail"
        Height="700" Width="900">

    <ScrollViewer>
        <StackPanel Margin="15">

            <TextBlock Text="{Binding Title}"
                       FontSize="22"
                       FontWeight="Bold"
                       TextWrapping="Wrap"/>

            <TextBlock Text="{Binding Date}"
                       Foreground="Gray"
                       Margin="0,5,0,10"/>

            <Image Height="400"
                   Stretch="Uniform"
                   Source="{Binding HdUrl}"/>

            <TextBlock Text="{Binding Explanation}"
                       TextWrapping="Wrap"
                       Margin="0,15,0,0"/>

        </StackPanel>
    </ScrollViewer>

</Window>